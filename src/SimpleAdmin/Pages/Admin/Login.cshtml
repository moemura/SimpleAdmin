@page
@model SimpleAdmin.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Admin Login - Simple Admin";
}

<div class="admin-login-container">
    <div class="login-form-container">
        <div class="login-header">
            <h1>Simple Admin</h1>
            <p>Sign in to your account</p>
        </div>

        <form method="post" class="login-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>
                    <input type="checkbox" asp-for="Input.RememberMe" value="@Model.Input.RememberMe" /> Remember me
                </label>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Copy/paste lại toàn bộ phần <style> từ Razor component của bạn */
    .admin-login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f0f2f5;
    }

    .login-form-container {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .login-header h1 {
            color: #1890ff;
            margin-bottom: 0.5rem;
        }

        .login-header p {
            color: #666;
            margin: 0;
        }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-control {
        padding: 0.5rem;
        border: 1px solid #d9d9d9;
        border-radius: 4px;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #1890ff;
            outline: none;
            box-shadow: 0 0 0 2px rgba(24, 144, 255, 0.2);
        }

    .btn {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-primary {
        background-color: #1890ff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #40a9ff;
        }

    .alert {
        padding: 0.75rem;
        border-radius: 4px;
        margin-bottom: 1rem;
    }

    .alert-danger {
        background-color: #fff2f0;
        border: 1px solid #ffccc7;
        color: #ff4d4f;
    }
</style>
