@page "/admin/dashboard"
@using Microsoft.AspNetCore.Authorization
@using SimpleAdmin.Models.DTOs
@attribute [Authorize(Policy = "RequireAdminRole")]
@inject IMessageService MessageService

<PageTitle>Dashboard - Overview</PageTitle>

<div class="dashboard-container">
    <PageHeader Title="Dashboard" Subtitle="Revenue overview and statistics">
        <PageHeaderExtra>
            <Button Type="@ButtonType.Primary"
                    Icon="@IconType.Outline.Reload"
                    OnClick="LoadData"
                    Loading="_loading">
                Refresh
            </Button>
        </PageHeaderExtra>
    </PageHeader>

    <Spin Spinning="_loading">
    </Spin>
</div>

<style>
    .dashboard-container {
        padding: 0;
    }

    .chart-container {
        padding: 16px 0;
    }

    .chart-bar-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        padding: 8px 0;
    }

    .chart-bar-label {
        width: 80px;
        font-weight: 500;
        color: #333;
        flex-shrink: 0;
        font-size: 12px;
    }

    .chart-bar-container {
        flex: 1;
        position: relative;
        height: 20px;
        background-color: #f5f5f5;
        border-radius: 4px;
        overflow: hidden;
        margin-left: 12px;
    }

    .chart-bar {
        height: 100%;
        background: linear-gradient(90deg, #1890ff, #40a9ff);
        transition: width 0.3s ease;
        min-width: 2px;
    }

    .chart-bar-value {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 11px;
        color: #666;
        font-weight: 500;
    }

    /* Payment method styles */
    .payment-stats {
        padding: 8px 0;
    }

    .payment-item {
        display: flex;
        align-items: center;
        margin-bottom: 16px;
        padding: 8px 0;
    }

    .payment-info {
        width: 120px;
        flex-shrink: 0;
    }

    .payment-progress {
        flex: 1;
        display: flex;
        align-items: center;
        margin-left: 16px;
    }

    /* Product styles */
    .product-list {
        padding: 8px 0;
    }

    .product-item {
        display: flex;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .product-rank {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background-color: #1890ff;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 12px;
        margin-right: 12px;
    }

    .product-image {
        width: 40px;
        height: 40px;
        margin-right: 12px;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 4px;
        }

    .no-image {
        width: 40px;
        height: 40px;
        background-color: #f5f5f5;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        color: #bbb;
    }

    .product-info {
        flex: 1;
        margin-right: 12px;
    }

    .product-name {
        margin-bottom: 4px;
    }

    .product-details {
        margin-bottom: 4px;
    }

    .product-stats {
        font-size: 11px;
        color: #666;
        display: flex;
        gap: 12px;
    }

    .product-revenue {
        text-align: right;
    }

    /* Brand styles */
    .brand-list {
        padding: 8px 0;
    }

    .brand-item {
        display: flex;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .brand-rank {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background-color: #52c41a;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 12px;
        margin-right: 12px;
    }

    .brand-logo {
        width: 40px;
        height: 40px;
        margin-right: 12px;
    }

        .brand-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 4px;
        }

    .no-logo {
        width: 40px;
        height: 40px;
        background-color: #f56a00;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        font-weight: bold;
    }

    .brand-info {
        flex: 1;
        margin-right: 12px;
    }

    .brand-stats {
        font-size: 11px;
        color: #666;
        display: flex;
        gap: 12px;
    }

    .brand-revenue {
        text-align: right;
    }

    /* Inventory styles */
    .inventory-alerts {
        padding: 8px 0;
    }

    .inventory-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        padding: 8px 0;
    }

    .inventory-info {
        width: 160px;
        flex-shrink: 0;
    }

    .inventory-stock {
        flex: 1;
        display: flex;
        align-items: center;
        margin-left: 16px;
    }

    /* Customer styles */
    .customer-list {
        padding: 8px 0;
    }

    .customer-item {
        display: flex;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .customer-index {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        background-color: #1890ff;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 12px;
        margin-right: 12px;
    }

    .customer-info {
        flex: 1;
        margin-right: 12px;
    }

    .customer-name {
        margin-bottom: 4px;
    }

    .customer-contact {
        color: #666;
        font-size: 11px;
    }

    .customer-stats {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 4px;
    }

    .customer-spent {
        font-size: 14px;
    }
</style>

@code {
    private bool _loading = true;
    private double _totalRevenue = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _loading = true;
        StateHasChanged();

        try
        {
            MessageService.Success("Data has been updated");
        }
        catch (Exception ex)
        {
            MessageService.Error("Error loading data: " + ex.Message);
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private string GetGrowthStyle()
    {
        var growthRate = 0;
        return growthRate >= 0 ? "color: #3f8600" : "color: #cf1322";
    }

    private string GetStockWarningStyle()
    {
        var lowStockCount = 0;
        return lowStockCount > 10 ? "color: #cf1322" : lowStockCount > 5 ? "color: #faad14" : "color: #3f8600";
    }

    private string GetPaymentMethodName(string method)
    {
        return method switch
        {
            "COD" => "COD",
            "BankTranfer" => "Bank Tranfer",
            "CreditCard" => "Credit Card",
            "MoMo" => "Ví MoMo",
            "VnPay" => "VnPay",
            "ZaloPay" => "ZaloPay",
            "PayPal" => "PayPal",
            _ => method
        };
    }

    private string GetPaymentMethodColor(string method)
    {
        return method switch
        {
            "COD" => "#52c41a",
            "BankTranfer" => "#1890ff",
            "CreditCard" => "#722ed1",
            "MoMo" => "#eb2f96",
            "VnPay" => "#fa8c16",
            "ZaloPay" => "#13c2c2",
            "PayPal" => "#fadb14",
            _ => "#1890ff"
        };
    }
}